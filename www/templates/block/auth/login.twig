{% if not(User.isLogged()) %}
<div class="pull-right">
	<form id="form-auth-login" name="login" action="/auth/login" method="post" class="form-inline" autocomplete="off">
		<input type="text" name="login" class="input-small btn-mini" placeholder="Login">
		<input type="password" name="password" class="input-small btn-mini" placeholder="Password">
		<!--<label class="checkbox">
			<input type="checkbox"> Remember me
		</label>-->
		<input type="submit" class="btn btn-mini btn-primary" value="Sign in" />
		<a class="auth-register" href="/auth/reg">Реєстрація</a>
		<a class="auth-reset" href="/auth/reset">Відновлення паролю</a>
	</form>
</div>
{% else %}
<a href="#profile" class="dropdown-toggle pull-right" data-toggle="dropdown">Вітаємо, <strong>{{User.getUsername()}}!</strong><b class="caret"></b></a>
<ul class="dropdown-menu">
	<li><a data-toggle="modal" href="#preferences">Налаштування</a></li>
	<li><a data-toggle="modal" href="/auth/logout">Вихід</a></li>
</ul>
{% endif %}

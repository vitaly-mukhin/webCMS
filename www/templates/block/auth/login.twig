<div id="top-user" class="pull-right">
    {% if not(User.isLogged()) %}
        <form action="/auth/login" method="post" class="form-auth-login navbar-search pull-rightwell form-search"
              autocomplete="off">
            <input type="text" name="login" class="input-small" placeholder="Email">
            <input type="password" name="password" class="input-small" placeholder="Password">
            <button type="submit" class="btn-small">Увійти</button>
        </form>
        <ul class="nav">
            <li><a class="auth-register" href="/auth/reg">Реєстрація</a></li>
            <li><a class="auth-reset" href="/auth/reset">Відновлення паролю</a></li>
        </ul>
    {% else %}
        <ul class="nav pull-right">
            <li class="dropdown">
                <a href="#profile" class="dropdown-toggle" data-toggle="dropdown">Вітаємо,
                    <strong>{{ User.getUsername() }}!</strong><b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a data-toggle="modal" href="/auth/profile">Налаштування</a></li>
                    <li><a data-toggle="modal" href="/auth/logout">Вихід</a></li>
                </ul>
            </li>
        </ul>
    {% endif %}
</div>

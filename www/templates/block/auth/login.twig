<div id="top-user" class="pull-right">
{% if not(User.isLogged()) %}
		<form action="/auth/login" method="post" class="form-auth-login form-inline" autocomplete="off">
			<input type="text" name="login" class="input-small btn-mini" placeholder="Login">
			<input type="password" name="password" class="input-small btn-mini" placeholder="Password">
			<!--<label class="checkbox">
				<input type="checkbox"> Remember me
			</label>-->
			<input type="submit" class="btn btn-mini btn-primary" value="Увійти" />
			<a class="auth-register" href="/auth/reg">Реєстрація</a>
			<a class="auth-reset" href="/auth/reset">Відновлення паролю</a>
		</form>
{% else %}
		<ul class="nav pull-right">
			<li class="dropdown">
				<a href="#profile" class="dropdown-toggle" data-toggle="dropdown">Вітаємо, <strong>{{User.getUsername()}}!</strong><b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li><a data-toggle="modal" href="/auth/profile">Налаштування</a></li>
					<li><a data-toggle="modal" href="/auth/logout">Вихід</a></li>
				</ul>
			</li>
		</ul>
{% endif %}
	</div>
